<!DOCTYPE html>
<html>
<head>
  <title>Inmobiliaria</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel='stylesheet' href='/stylesheets/oneImb.css' />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300..700&display=swap" rel="stylesheet">
</head>
<body>
  <%- include('modules/navbar') %>
  
  <a class="btn btn-morado mt-4 mb-4" href="/oneImb/<%= house.id %>/registerHouse">Añade tu casa</a>

  <section class="inmobiliaria">
    <h2>Detalles de la inmobiliaria</h2>
    <div class="container-xxl">
      <div class="row">
        <div class="col-12 text-center">
          <img class="foto" src="/images/inmobiliaria/<%= house.img %>" width="500px" alt="Foto principal de la inmobiliaria">
          <p class="mt-4">Nombre: <%= house.name %></p>
          <p>Descripción: <%= house.description %></p>
          <p>email: <%= house.email %> Telefono: <%= house.telephone %></p>
        </div>
      </div>
    </div>
  </section>
  <section class="seccion2">
    <h3 class="text-center mb-3">Estas son nuestras casas disponibles actualmente.</h3>
    <div class="container-xxl">
      <div class="row">
        <div class="col-12">
          <div class="ppal d-flex flex-wrap gap-4 justify-content-center mt-4">
            <% resulthouse.forEach((e) => { %>
              <div class="card" style="width: 30rem;">
                <img src="/images/casas/<%= e.house_img %>" width="auto" alt="">
                <div class="card-body">
                  <h5 class="card-title"><%= e.location %></h5>
                  <h5 class="card-title"><%= e.address %></h5>
                  <h5 class="card-title"><%= e.construction_year %></h5>
                  <h5 class="card-title"><%= e.metres %></h5>
                  <h5 class="card-title"><%= e.house_description %></h5>
                  <a href="/houses/editHouse/<%= e.house_id %>" class="btn btn-morado mb-3">Editar</a>
                  <a href="/houses/delete/<%= e.house_id %>" class="btn btn-danger mb-3">Eliminar</a>
                  <a href="/houses/logicDelete/<%= e.house_id %>" class="btn btn-morado">Eliminar lógicamente</a>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
  </section>
  <footer class="py-5">
    <div class="container-xxl">
      <div class="row text-center text-white">
        <div class="col">
          <p>Todos los derechos reservados. ©2024</p>
          <div class="mt-4 d-flex justify-content-center gap-4 gap-md-5">
            <img
              src="/images/facebook.png"
              alt="Logo facebook"
            >
            <img
              src="/images/twitter.png"
              alt="Logo twitter"
            >
            <img
              src="/images/instagram.png"
              alt="Logo instagram"
            >
            <img
              src="/images/youtube.png"
              alt="Logo youtube"
            >
            <img
              src="/images/logotipo-de-linkedin.png"
              alt="Logo linkedin"
            >
          </div>
        </div>
      </div>
    </div>
  </footer>
  

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
