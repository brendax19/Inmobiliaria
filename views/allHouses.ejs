<!DOCTYPE html>
<html>
<head>
  <title>Inmobiliaria</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300..700&display=swap" rel="stylesheet">
</head>
<body>
 <header>
  <%- include('modules/navbar') %>
</header>
<body>
  <h2 class="text-center fs-2 mb-4"> Casas disponibles</h2>
</body>
<div class="container-xxl">
  <div class="row justify-content-center">
      <% resulthouse.forEach((elem)=>{ %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4 mt-4">
            <div class="card h-100">
                <img src="/images/casas/<%= elem.house_img %>" class="card-img-top" alt="...">
                <div class="card-body">
          <p class="mt-4">Localización: <%= elem.location %></p>
          <p>Dirección: <%= elem.address %></p>
          <p>Año de construcción: <%= elem.construction_year %> Metros: <%= elem.metres %></p>
                </div>
              </div>
          </div>
      <% }) %>
  </div>
 </div>
 <footer class="py-5">
  <div class="container-xxl">
    <div class="row text-center text-white">
      <div class="col">
        <p>Todos los derechos reservados. ©2024</p>
        <div class="mt-4 d-flex justify-content-center gap-4 gap-md-5">
          <img
            src="/images/facebook.png"
            alt="Logo facebook"
          >
          <img
            src="/images/twitter.png"
            alt="Logo twitter"
          >
          <img
            src="/images/instagram.png"
            alt="Logo instagram"
          >
          <img
            src="/images/youtube.png"
            alt="Logo youtube"
          >
          <img
            src="/images/logotipo-de-linkedin.png"
            alt="Logo linkedin"
          >
        </div>
      </div>
    </div>
  </div>
</footer>




  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
